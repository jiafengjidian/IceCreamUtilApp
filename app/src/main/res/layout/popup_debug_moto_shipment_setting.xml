<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600px"
    android:layout_height="800px"
    android:background="@drawable/shape_popup_debug_moto"
    android:padding="25px"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="20sp"
        android:text="取货电机控制"
        android:id="@+id/id_popup_debug_moto_setting_text_view_title"/>

    <LinearLayout
        android:layout_marginTop="50px"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/shape_rounded"
        android:paddingLeft="75px"
        android:paddingRight="25px"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@null"
            android:textSize="15sp"
            android:textColor="@android:color/holo_red_light"
            android:hint="编码器步数"
            android:id="@+id/id_popup_debug_moto_setting_edit_text_value"/>

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:src="@drawable/ic_clear"
            android:id="@+id/id_popup_debug_moto_setting_image_view_clear"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:layout_marginTop="50px">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="25px"
            android:background="@drawable/ripple_button_popup_debug_setting"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:text="上升"
            android:id="@+id/id_popup_debug_moto_setting_button_up"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_button_popup_debug_setting"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:text="下降"
            android:id="@+id/id_popup_debug_moto_setting_button_down"/>

    </LinearLayout>

    <Button
        android:layout_marginTop="50px"
        android:layout_width="300px"
        android:layout_height="150px"
        android:background="@drawable/ripple_button_popup_debug_setting"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:id="@+id/id_popup_debug_moto_setting_button_shipment"
        android:text="取货" />

</LinearLayout>