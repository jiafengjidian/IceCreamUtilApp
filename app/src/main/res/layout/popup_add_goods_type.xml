<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600px"
    android:layout_height="700px"
    android:background="@drawable/shape_popup_debug_robot_arm_setting"
    android:orientation="vertical"
    android:padding="75px">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/shape_rounded"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25px"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="24sp"
            android:inputType="number"
            android:text=""
            android:layout_gravity="center"
            android:hint="请输入行"
            android:id="@+id/id_popup_goods_setting_edit_text_row"
            android:gravity="center"/>

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/ic_clear"
            android:layout_gravity="center"
            android:id="@+id/id_popup_goods_setting_image_view_row"
            android:layout_marginRight="25px"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50px"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/shape_rounded"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:layout_marginLeft="25px"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="24sp"
            android:inputType="number"
            android:text=""
            android:layout_gravity="center"
            android:id="@+id/id_popup_goods_setting_edit_text_col"
            android:hint="请输入列"
            android:gravity="center"/>

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/ic_clear"
            android:id="@+id/id_popup_goods_setting_image_view_col"
            android:layout_gravity="center"
            android:layout_marginRight="25px"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginTop="50px"
        android:background="@drawable/ripple_button_popup_debug_setting"
        android:textSize="24sp"
        android:id="@+id/id_popup_goods_setting_button_ok"
        android:textColor="@android:color/white"
        android:text="确定" />

</LinearLayout>