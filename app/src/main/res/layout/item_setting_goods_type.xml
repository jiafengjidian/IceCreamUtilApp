<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="450px"
    android:layout_height="450px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="75px"
    app:cardCornerRadius="75px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_item_goods_type"
        android:id="@+id/id_item_fragment_goods_type_lay_out"
        android:padding="50px"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:textColor="@android:color/holo_orange_light"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/id_item_fragment_goods_type_text_view_goods_type"
            android:text="货道:2-5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:textColor="@android:color/holo_green_dark"
            android:gravity="center"
            android:textSize="13sp"
            android:id="@+id/id_item_fragment_goods_type_text_view_position"
            android:text="位置:(200, 300)" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:textSize="13sp"
            android:text="点击出货" />

    </LinearLayout>

</android.support.v7.widget.CardView>