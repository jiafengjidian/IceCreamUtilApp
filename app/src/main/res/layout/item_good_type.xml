<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="450px"
    android:layout_height="450px"
    android:id="@+id/id_item_good_type_card_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="50px"
    app:cardElevation="50px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="50px"
        android:background="@drawable/ripple_item_card_view">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:textSize="20sp"
            android:textColor="@android:color/holo_orange_dark"
            android:text="(104, 249)"
            android:gravity="center"
            android:id="@+id/id_item_good_type_text_view_position"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_bright"
            android:text="A0"
            android:gravity="center"
            android:id="@+id/id_item_good_type_text_view_name"/>

    </LinearLayout>

</android.support.v7.widget.CardView>